FIELD id


PROCEDURE Main()

   LOCAL aDbf
   LOCAL cName := "test.dbf"
   LOCAL nI
   LOCAL oError


   aDbf := { ;
        { "id", "C", 10, 0 },    ;
        { "desc", "C", 100, 0 }, ;
        { "value", "N", 10, 2 }  ;
   }

   DbCreate( cName, aDbf)

   USE (cName) NEW ALIAS TEST_DBF

   FOR nI := 100 TO 1 STEP -1
      APPEND BLANK
      REPLACE id    WITH PadL( AllTrim(Str(nI)), 10, "0" ),;
           desc  WITH "Description " + PadL( AllTrim( Str( nI) ), 3, "x" ),;
           value WITH nI
   NEXT

   BEGIN SEQUENCE
      INDEX ON id TAG "id"
   RECOVER USING oError
      dbCloseArea()
      Break( oError )
   END SEQUENCE

   GO TOP
   DO WHILE !EOF()
      ? "id:", TEST_DBF->id, "desc:", Trim(TEST_DBF->desc), "value:", TEST_DBF->value
      SKIP
   ENDDO
   
   Alert("Hello code dbf, records count = " + AllTrim(ValToStr(RecCount())))

   USE

   QUIT

   RETURN
