{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "ZHExtension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}", "${workspaceRoot}/hello_world_proj" ],
			"preLaunchTask": "prelanch"
        },
		{
			"name": "ZHDebugger",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"program": "${workspaceRoot}/dist/debugger.js",
			"args": [ "--server=4711" ],
			"preLaunchTask": "prelanch"
		},
		{
			"name": "test_parse_zh_docs",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/test_parse.js",
            "console": "integratedTerminal"
        },
        {
			"name": "parse_zh_docs",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/ziher/parse_zh_docs.js"
		},
		{
            "name": "ZHLanguageServer",
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "port": 21780,
            "sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/dist/zh_server.js*"
			],
        }
	],
	"compounds": [
		{
			"name": "ZHExtension + ZHLanguageServer",
			"configurations": [ 
				"ZHExtension", 
				"ZHLanguageServer" 
			]
		},
		{
			"name": "Extension + Debugger",
			"configurations": [ 
				"ZHExtension", 
				"ZHDebugger" 
			]
		}
	]
}